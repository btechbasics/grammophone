@top rules { rule* }

rule {
  HeadSymbol "->" productions "." |
  HeadSymbol ":" productions ";"
}

HeadSymbol { symbol }

productions { Production | productions "|" Production }

Production { ProductionSymbol* }

ProductionSymbol { symbol }

@skip { space | comment }

@tokens {
  symbolStart { std.asciiLetter | $[_$] }
  symbolPart { symbolStart | std.digit }
  symbol { symbolStart symbolPart* }
  
  space { std.whitespace+ }
  comment { "#" ![\n]* }
}
